<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernat MApping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="soap.database.entity.FilmEntity" table="sakila.film">
        <id name="film_id" type="long" column="film_id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="release_year" column="release_year" type="int"/>
        <property name="language_id" column="language_id" type="long"/>
        <property name="original_language" column="original_language" type="long"/>
        <property name="rental_duration" column="rental_duration" type="int"/>
        <property name="rental_rate" column="rental_rate" type="float"/>
        <property name="length" column="length" type="int"/>
        <property name="replacement_cost" column="replacement_cost" type="float"/>
        <property name="rating" column="rating" type="string"/>
        <property name="special_features" column="special_features" type="string"/>
        <property name="last_update" column="last_update" type="timestamp"/>
    </class>
</hibernate-mapping>