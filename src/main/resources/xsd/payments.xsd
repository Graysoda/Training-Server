<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="my-namespace"
           xmlns:data="my-namespace"
           elementFormDefault="qualified">
    <xs:include schemaLocation="data_elements.xsd"/>

    <xs:element name="createPaymentRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="customer_id" type="xs:long"/>
                <xs:element name="staff_id" type="xs:long"/>
                <xs:element name="rental_id" type="xs:long"/>
                <xs:element name="amount" type="xs:float"/>
                <xs:element name="payment_date" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="updatePaymentRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="payment_id" type="xs:long"/>
                <xs:element name="customer_id" type="xs:long" nillable="true"/>
                <xs:element name="staff_id" type="xs:long" nillable="true"/>
                <xs:element name="rental_id" type="xs:long" nillable="true"/>
                <xs:element name="amount" type="xs:float" nillable="true"/>
                <xs:element name="payment_date" type="xs:string" nillable="true"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="deletePaymentRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="payment_id" type="xs:long"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getAllPaymentsRequest">
        <xs:complexType>
            <xs:sequence maxOccurs="1" minOccurs="1"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="getAllPaymentsResponse">
        <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
                <xs:element name="payment" type="data:payment"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentByIdRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="xs:long" name="payment_id"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentByIdResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="payment" type="data:payment"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentsForRentalRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="rental_id" type="xs:long"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentsForRentalResponse">
        <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
                <xs:element name="payment" type="data:payment"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentsFromCustomerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="xs:long" name="customer_id"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getPaymentsFromCustomerResponse">
        <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
                <xs:element name="payment" type="data:payment"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>